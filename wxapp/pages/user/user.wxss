@import "../../template/t_radio.wxss";

.user {
    height: calc(100vh);
}

.u-top {
    height: 375rpx;
    background: -webkit-linear-gradient(top, #fff020, #fdc700);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.u-cont {
    background: #fff;
    min-height: calc(100vh - 375rpx);
}

.u-head {
    width: 188rpx;
    height: 188rpx;
    border-radius: 50%;
    margin-top: 48rpx;
}

.u-name {
    margin-top: 30rpx;
    color: #fff;
}

.u-func {
    display: -webkit-box;
    padding: 0 45rpx;
}

.u-list {
    -webkit-box-flex: 1;
    height: 115rpx;
    line-height: 115rpx;
    text-align: center;
    border-bottom: 3px solid #e9e8e8;
}

.list-checked {
    border-color: #fff200;
}


.no-audio {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.no-audio-img {
    margin-top: 36rpx;
    width: 480rpx;
    height: 400rpx;
}

.want-audio {
    margin-top: 24rpx;
    width: 300rpx;
    height: 75rpx;
    line-height: 75rpx;
    background: -webkit-linear-gradient(top, #fff020, #fdc700);
    border-radius: 36rpx;
    text-align: center;
}
.no-recordimg {
  width: 100%;
  height: 500rpx;
}
.no-recordtxt {
  width: 100%;
  font-size: 30rpx;
}