@import "../../template/t_radio.wxss";

.radio {
    height: calc(100vh);
}

.radio-img {
    width: 100%;
    height: 375rpx;
    display: block;
}

.radio-c {
    display: -webkit-box;
    padding: 30rpx;
    height: 240rpx;
}

.r-change {
    -webkit-box-flex: 1;
}

.change-center {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.change-img {
    width: 74rpx;
    height: 74rpx;
    margin-bottom: 20rpx;
}

.radio-cont {
    min-height: calc(100vh - 615rpx);
    background: #fff;
}

.r-title {
    margin: 0 30rpx;
    height: 95rpx;
}

.yellow-line {
    display: inline-block;
    margin-right: 15rpx;
    height: 48rpx;
    border-left: 5px solid #fef300;
    vertical-align: middle;
}

.r-title-mes {
    line-height: 95rpx;
    font-size: 48rpx;
    vertical-align: middle;
}