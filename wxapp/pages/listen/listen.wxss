.listen {
    padding: 50rpx 76rpx 140rpx;
    /* margin-bottom: 140rpx; */
}

.l-title {
    font-size: 48rpx;
}

.l-taa {
    margin-top: 6rpx;
    font-size: 36rpx;
    color: #666;
}

.l-radio {
    position: relative;
    height: 650rpx;
}

.radio-img {
    width: 500rpx;
    height: 500rpx;
    border-radius:50%;
    overflow: hidden;
}

.radio-status {
    position: absolute;
    margin: auto;
    top: 0 ;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 10;
    width: 134rpx;
    height: 134rpx;
}

.radio-switch {
    position: absolute;
    bottom: 30rpx;
    z-index: 10;
    width: 61rpx;
    height: 44rpx;
}

.radio-prev {
    left: 25rpx;
}
    

.radio-next {
    right: 25rpx;
}

.l-article {
    color: #bbb;
}

.bottom {
    display: -webkit-flex;
    align-items: center; 
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    border-top: 1px solid #d3d3d3;
    background: #fff;
}

.bot-img {
    width: 44rpx;
    height: 38rpx;
    margin-left: 50rpx;
}

.bot-share {
    position: absolute;
    left: 138rpx;
    top: 38rpx;
    width: 44rpx;
    height: 44rpx;
    border: none !important;
}

.bot-mes {
    position: absolute;
    bottom: 0;
    right: 40rpx;
    line-height: 120rpx;
    color: #bbb;
    display:-webkit-flex;
    align-items:center;
}

.author-view {
    height: 60rpx;
    margin-right: 20rpx;
}

.author-img {
    width:60rpx;
    height:60rpx;
    position:absolute;
    border-radius:50%;
    background:#fff;
}

.author-view image:nth-child(1) {
    right: 0;
    z-index: 40;
}

.author-view image:nth-child(2) {
    right: 40rpx;
    z-index: 30;
}

.author-view image:nth-child(3) {
    right: 80rpx;
    z-index: 20;
}

.author-view image:nth-child(4) {
    right: 120rpx;
    z-index: 10;
}
